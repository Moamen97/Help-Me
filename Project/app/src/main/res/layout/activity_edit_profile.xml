<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewbg"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/bg_circle_white" />

                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/bg_circle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="M"
                            android:textColor="@color/md_blue_50"
                            android:textSize="27sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/personName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Name : Moamen Hassan"
                        android:textAlignment="center"
                        android:textColor="@color/fbutton_color_midnight_blue"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/personProfession"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Profession : Carpenter"
                        android:textAlignment="center"
                        android:textColor="@color/fbutton_color_midnight_blue"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                    />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="200dp"
                    app:cardBackgroundColor="@color/md_amber_100"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="POSTS"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personNoOfPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="10"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RATE"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="10"
                                android:textColor="@color/fbutton_color_wet_asphalt"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/editFirstNametextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="First Name"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editMidNametextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Middle Name"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editLastNametextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Last Name"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editGendertextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Change Gender"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editEmailtextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Email Address"

                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editPassWordtextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="New Password"

                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editPhonetextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Edit Phone"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/editBirthDatetextbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/WorkshopPhoneNumberEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_person_midnight_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Birth Date"
                    android:paddingStart="10dp"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>