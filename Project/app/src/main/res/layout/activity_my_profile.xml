<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/viewbg"
    android:orientation="vertical"
    tools:context="com.helpme.EditProfile.MyProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/musiccheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:checked="true"
                android:onClick="music"
                android:text="Music"
                android:textColor="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:focusedByDefault="true"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="Profile Image"
                        android:focusedByDefault="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_user_icon" />
                </android.support.v7.widget.CardView>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    app:backgroundTint="@color/md_blue_400"
                    app:srcCompat="@drawable/ic_edit_white_24dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/personName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Name : Moamen Hassan"
                android:textAlignment="center"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@color/md_amber_50"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/LogOutb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/card_view"
            android:layout_below="@+id/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="10dp"
            android:background="@color/md_amber_100"
            android:onClick="LogOut"
            android:text="Log Out"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AddWorkShops"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/LogOutb"
            android:layout_below="@+id/LogOutb"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@color/md_amber_100"
            android:onClick="btnAddWorkShops"
            android:text="Add Workshops"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addWorkImages"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AddWorkShops"
            android:layout_alignEnd="@+id/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="23dp"
            android:layout_marginVertical="10dp"
            android:background="@color/md_amber_100"
            android:onClick="btnAddWorkShops"
            android:text="Add works'images"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/worksImagesGV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addWorkImages"
            android:layout_gravity="center_horizontal"
            android:background="@color/viewbg"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:padding="20dp"
            android:verticalSpacing="10dp" />

    </RelativeLayout>

</ScrollView>

