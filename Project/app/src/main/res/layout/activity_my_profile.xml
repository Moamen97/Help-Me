<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewbg"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView

                            android:id="@+id/userImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:layout_marginVertical="5dp"
                            android:contentDescription="Profile Image"
                            android:src="@drawable/bg_circle"
                            app:srcCompat="@drawable/ic_user_icon" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="@dimen/fab_margin"
                            app:backgroundTint="@color/md_blue_400"
                            app:srcCompat="@drawable/ic_edit_white_24dp" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/personName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Name : Moamen Hassan"
                        android:textAlignment="center"
                        android:textColor="@color/fbutton_color_midnight_blue"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/personProfession"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Profession : "
                        android:textAlignment="center"
                        android:textColor="@color/fbutton_color_midnight_blue"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="200dp"
                    app:cardBackgroundColor="@color/md_amber_50"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="POSTS"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personNoOfPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="10"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RATE"
                                android:textColor="@color/fbutton_color_midnight_blue"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/personRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="10"
                                android:textColor="@color/fbutton_color_wet_asphalt"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/ShowWorkShops"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:background="@color/md_amber_100"
                    android:text="My Workshops"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/MyPosts"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ShowWorkShops"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:background="@color/md_amber_100"
                    android:onClick="getmyposts"
                    android:text="My Posts"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/AddWorkShops"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MyPosts"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:background="@color/md_amber_100"
                    android:onClick="btnAddWorkShops"
                    android:text="Add Workshops"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>