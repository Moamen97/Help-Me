<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/addCommentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/md_blue_400"
        android:orientation="vertical">


        <EditText
            android:id="@+id/commentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="  What do you think  ..... "
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="3"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textCursorDrawable="@color/fbutton_color_midnight_blue" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/icon_tint_normal" />

            <ImageView
                android:id="@+id/secondStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/icon_tint_normal" />

            <ImageView
                android:id="@+id/thirdStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/icon_tint_normal" />

            <ImageView
                android:id="@+id/fourthStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/icon_tint_normal" />

            <ImageView
                android:id="@+id/fifthStar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_star_black_24dp"
                android:tint="@color/icon_tint_normal" />

        </LinearLayout>


        <Button
            android:id="@+id/addFeedbackButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/trans_white_rectangle"
            android:text="Add Feedback"
            android:textAlignment="center"
            android:textColor="@color/fbutton_color_midnight_blue" />

    </LinearLayout>

</RelativeLayout>