<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helpme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Authentication.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home.home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".Authentication.SignIn" />
        <activity android:name=".Authentication.SignUp" />
        <activity android:name=".EditProfile.MyProfile" />
        <activity android:name=".EditProfile.AddProfession" />
        <activity android:name=".EditProfile.AddWorkShop" />
        <activity android:name=".AddPost" />
        <activity
            android:name=".Comment.ShowComments"
            android:excludeFromRecents="true"
            android:label=""
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".UploadImages.UploadProfileImage"
            android:label="@string/title_activity_upload_profile_image"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".Comment.ShowFeedbacks" />
        <activity android:name=".UserProfile" />
        <activity android:name=".Home.UserPosts"></activity>
    </application>

</manifest>